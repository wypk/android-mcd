<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/blue_grey_100</item>
        <item name="colorControlHighlight">@color/blue_grey_100</item>
        <item name="cardViewStyle">@style/CardView.Light</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
    </style>

</resources>
